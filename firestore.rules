rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is project member
    function isProjectMember(projectId) {
      return isSignedIn() && 
             request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.memberIds;
    }
    
    // Helper function to check if user is project owner
    function isProjectOwner(projectId) {
      return isSignedIn() && 
             request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }
    
    // Projects collection
    match /projects/{projectId} {
      allow read: if isProjectMember(projectId);
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.memberIds;
      allow update: if isProjectOwner(projectId) || isProjectMember(projectId);
      allow delete: if isProjectOwner(projectId);
      
      // Whiteboard elements subcollection
      match /whiteboard/{elementId} {
        allow read: if isProjectMember(projectId);
        allow create: if isProjectMember(projectId);
        allow update, delete: if isProjectMember(projectId);
      }
      
      // Threads subcollection
      match /threads/{threadId} {
        allow read: if isProjectMember(projectId);
        allow create: if isProjectMember(projectId);
        allow update, delete: if isProjectMember(projectId);
        
        // Posts subcollection
        match /posts/{postId} {
          allow read: if isProjectMember(projectId);
          allow create: if isProjectMember(projectId);
          allow update, delete: if isProjectMember(projectId);
        }
      }
      
      // Tasks subcollection
      match /tasks/{taskId} {
        allow read: if isProjectMember(projectId);
        allow create: if isProjectMember(projectId);
        allow update, delete: if isProjectMember(projectId);
      }
      
      // Snippets subcollection
      match /snippets/{snippetId} {
        allow read: if isProjectMember(projectId);
        allow create: if isProjectMember(projectId);
        allow update, delete: if isProjectMember(projectId);
        
        // Snippet comments (for future use)
        match /comments/{commentId} {
          allow read: if isProjectMember(projectId);
          allow create: if isProjectMember(projectId);
          allow update, delete: if isProjectMember(projectId);
        }
      }
    }
  }
}

